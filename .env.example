# Application
APP_ENV=development
APP_DEBUG=true
APP_KEY=base64:

# Database
# Options: sqlite | pgsql
DB_CONNECTION=sqlite
# SQLite: leave empty to use database/database.sqlite, or set absolute path
# DB_DATABASE=/path/to/database.sqlite

# PostgreSQL (when DB_CONNECTION=pgsql)
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=myapp
# DB_USERNAME=postgres
# DB_PASSWORD=

# Heroku: overrides all DB_* vars above when set
# DATABASE_URL=pgsql://user:pass@host:5432/dbname?sslmode=require

# CORS
CORS_ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=debug
