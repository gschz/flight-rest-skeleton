{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "gschz/php-flight-setup",
  "description": "A PHP Flight project setup.",
  "type": "project",
  "keywords": [
    "flightphp",
    "php",
    "setup"
  ],
  "license": "MIT",
  "require": {
    "php": "8.4",
    "ext-json": "*",
    "flightphp/core": "^3.0",
    "flightphp/runway": "^1.1",
    "tracy/tracy": "^2.9"
  },
  "require-dev": {
    "rector/rector": "^2.1",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.64",
    "flightphp/tracy-extensions": "^0.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "../database/factories/",
      "Database\\Seeders\\": "../database/seeders/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public",
    "test:types": "vendor/bin/phpstan analyze --configuration=phpstan.neon --memory-limit=512M",
    "rector:dry": "vendor/bin/rector --dry-run --clear-cache",
    "rector:fix": "vendor/bin/rector --clear-cache",
    "lint": "vendor/bin/php-cs-fixer fix --dry-run --diff --allow-risky=yes --config=.php-cs-fixer.php",
    "lint:fix": "vendor/bin/php-cs-fixer fix --allow-risky=yes --config=.php-cs-fixer.php"
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
